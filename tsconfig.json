{
  "compilerOptions": {

    /* Language and Environment */
    "target": "es2016",                                  

    /* Modules */
    "module": "commonjs",                               
    "rootDir": "./",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           

    /* Type Checking */
    "strict": true,                                     
    "skipLibCheck": true                             
  }
}
